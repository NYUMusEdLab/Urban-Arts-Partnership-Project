%h2
  Comments
%ul
  -lyric.comments.each do |comment|
    %li
      = comment.content 
    %p
      = lyric.definition 
      = form_for(@comment) do |f| 
        = f.text_area :content
        %input{:type=>"hidden", :value => lyric.id, :name => "lyric_id"}
        %br
        %input{:type=>"hidden", :value => song.id, :name => "song_id"}
        %br
        = f.submit




