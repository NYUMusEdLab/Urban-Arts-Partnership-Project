%h1 
  = @song.title 
%section{:class => "lyrics" }
%h1
  Lyrics
-@song.lyrics.each do |lyric|  
  %p{:data => {lyric: lyric.id, info: lyric.info} style: "white-space: pre-wrap;"} 
    %span
      = lyric.content 
%section{:class => "information"}
  - @lyrics_with_definitions.each do |lyric|
    %section{:class => "info-card", :data => {definition: lyric.id} }
%img{:style=>"width:200px", :src=>"http://www.urbanarts.org/wp-content/themes/urbanarts/img/uap_logo.png"}
